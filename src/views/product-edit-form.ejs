<!doctype html>
<html lang="en">

<%-include("./partials/head.ejs")%>

    <body>

        <div class="container">

            <%-include("./partials/header.ejs")%>

                <main class="bg-white pb-5">

                    <img src="/images/banner-form.jpg" class="img-fluid" alt="...">

                    <p class="h2 text-center p-3">Formulario de edicion de productos</p>

                    <div class="container pb-5">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 p-3 mx-auto shadow-lg border border-ligth"
                                style="width: 30rem;">



                                <form class="form" action="/products/edit/<%=locals.old.id%>?_method=PUT" method="post"
                                    enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre del producto</label>
                                        <input type="text" class="form-control" name="nombre" id="nombre"
                                            aria-describedby="emailHelp"
                                            value="<%= locals.old && old.nombre ? old.nombre : "" %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="precio" class="form-label">Precio del producto</label>
                                        <input type="text" class="form-control" name="precio" id="precio"
                                            value="<%= locals.old && old.precio ? old.precio : "" %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="descripcion" class="form-label">Descripcion</label>
                                        <input type="text" class="form-control" name="descripcion" id="descripcion"
                                            value="<%= locals.old && old.descripcion ? old.descripcion : "" %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="stock" class="form-label">Stock en unidades</label>
                                        <input type="number" class="form-control" name="stock" id="stock" value=1>
                                    </div>

                                    <div class="input-group mb-3">
                                        <label class="input-group-text" for="categoria">Categoria</label>
                                        <select class="form-select" name="categoria" id="categoria">
                                            <option value=1 type="number">Calzado</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="product-image" class="form-label">Imagen del producto</label>
                                        <input type="file" class="form-control" name="product-image" id="product-image">
                                    </div>

                                    <button type="submit" class="btn btn-outline-secondary mb-3">Guardar</button>

                                    <a href="/products/detail/<%old.id%>"><button class="btn btn-outline-secondary mb-3">Cancelar</button></a>

                                    <% if (locals.errors) { errors.forEach (error=> { %>
                                        <p class="pt-1 m-0 fs-6 text-danger">*<%= error.msg %>
                                        </p>
                                        <% })} %>

                                <p class="errores"></p>

                                </form>


                            </div>
                        </div>
                    </div>



                </main>

                <%-include("./partials/footer.ejs")%>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
        <script src="/js/validatorProductEdit.js"></script>
    </body>

</html>