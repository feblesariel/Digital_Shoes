<!doctype html>
<html lang="en">

<%-include("./partials/head.ejs")%>

    <body>

        <div class="container">

            <%-include("./partials/header.ejs")%>

                <main class="bg-white pb-5">


                    <img src="/images/banner-form.jpg" class="img-fluid" alt="...">

                    <p class="h2 text-center p-3">Registro de usuario</p>

                    <div class="container pb-5">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 p-3 mx-auto shadow-lg border border-ligth"
                                style="width: 30rem;">



                                <form class="form" action="/users/register" method="POST" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Nombre de usuario</label>
                                        <input type="text" class="form-control" name="name" id="name"
                                            aria-describedby="emailHelp"
                                            value="<%= locals.old && old.name ? old.name : "" %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Contrase√±a</label>
                                        <input type="password" class="form-control" name="password" id="password">
                                    </div>
                                    <div class="mb-3">
                                        <label for="domicilio" class="form-label">Domicilio</label>
                                        <input type="text" class="form-control" name="domicilio" id="domicilio"
                                            value="<%= locals.old && old.domicilio ? old.domicilio : "" %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="zipcode" class="form-label">Codigo postal</label>
                                        <input type="text" class="form-control" name="zipcode" id="zipcode"
                                            value="<%= locals.old && old.zipcode ? old.zipcode : "" %>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" name="email" id="email"
                                            value="<%= locals.old && old.email ? old.email : "" %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="user-image" class="form-label">Imagen</label>
                                        <input type="file" class="form-control" name="user-image" id="user-image">
                                    </div>

                                    <button type="submit" class="btn btn-outline-secondary mb-3">Guardar</button>
                                    <button type="reset" class="btn btn-outline-secondary mb-3">Cancelar</button>

                                    <% if (locals.errors) { errors.forEach (error=> { %>
                                        <p class="errores">*<%= error.msg %>
                                        </p>
                                        <% })} %>

                                    <p class="errores"></p>

                                </form>

                            </div>
                        </div>
                    </div>



                </main>

                <%-include("./partials/footer.ejs")%>

        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
        <script src="/js/validatorRegister.js"></script>
    </body>

</html>