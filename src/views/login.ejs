<!doctype html>
<html lang="en">

<%-include("./partials/head.ejs")%>

  <body>

    <div class="container">

      <%-include("./partials/header.ejs")%>

        <main class="bg-white pb-5">

          <img src="/images/banner-form.jpg" class="img-fluid" alt="...">

          <p class="h2 text-center p-3">Iniciar Sesión</p>

          <div class="container pb-5">
            <div class="row">
              <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 p-3 mx-auto shadow-lg border border-ligth"
                style="width: 30rem;">


                <form class="form" action="/users/login/" method="post">
                  <div class="mb-3">
                    <label for="email" class="form-label">Correo electronico</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
                      value="<%= locals.old && old.email ? old.email : "" %>">
                  </div>

                  <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" name="password" id="password">
                  </div>

                  <button type="submit" class="btn btn-outline-secondary mb-3">Ingresar</button>

                  <% if (locals.errors) { errors.forEach (error=> { %>
                    <p class="errores"><%= error.msg %>
                    </p>
                    <% })} %>

                    <p class="errores"></p>

                </form>
              </div>
            </div>
          </div>


        </main>

        <%-include("./partials/footer.ejs")%>

    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"></script>
      <script src="/js/validatorLogin.js"></script>

  </body>

</html>